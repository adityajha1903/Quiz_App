<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".QuizQuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="32dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="A passenger in a moving bus is thrown forward when the bus suddenly stops, this is explained by ______.">
        </TextView>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/quiz_image"
            tools:src="@drawable/ic_stomach">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:max="30"
                android:indeterminate="false"
                android:minHeight="50dp"
                android:progress="0"
                style="?android:attr/progressBarStyleHorizontal">
            </ProgressBar>

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:textColor="#878484"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="0/30">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvOp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/ic_options_bg"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Newton's first law">
        </TextView>

        <TextView
            android:id="@+id/tvOp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_options_bg"
            android:elevation="8dp"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Newton's second law">
        </TextView>

        <TextView
            android:id="@+id/tvOp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_options_bg"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:text="Newton's third law">
        </TextView>

        <TextView
            android:id="@+id/tvOp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginHorizontal="48dp"
            android:textSize="30sp"
            android:elevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:background="@drawable/ic_options_bg"
            tools:text="Law of thermodynamics"
            android:textColor="@color/black">
        </TextView>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_marginVertical="32dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/bg_2">
        </Button>

    </LinearLayout>
</ScrollView>
